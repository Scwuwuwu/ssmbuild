<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sc.mapper.BookMapper">
    <insert id="addBook" parameterType="Books">
        insert into books (bookName,bookCounts,detail)
        values (#{bookName},#{bookCounts},#{detail})
    </insert>

    <delete id="deleteBookById" parameterType="Integer">
        delete from books where bookId = #{bookId}
    </delete>

    <update id="updateBook" parameterType="Books">
        update books set bookName = #{bookName} bookCounts = #{} detail = #{detail}
        where bookId = #{bookId}
    </update>

    <select id="getBookById" resultType="Books">
        select * from books where bookId = #{bookId}
    </select>

    <select id="getAllBooks" resultType="Books">
        select * from books
    </select>
</mapper>